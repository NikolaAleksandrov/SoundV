<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFApp1.Views.CallPage"
             xmlns:custom="clr-namespace:XFApp1.CustomRenderer;assembly=XFApp1">
    <ContentPage.Content>
        <StackLayout>

            <custom:SwipeableImage x:Name="SwipeableImage" 
                                   Margin="10" 
                                   Source="__arrow_up_green.png"
                                   HeightRequest="120"
                                   WidthRequest="120"
                                   SwipedLeft="GoToTaxiPage"
                                   SwipedRight="PreviousPageMainLevel">
            </custom:SwipeableImage>

            <StackLayout Margin="10" VerticalOptions="Center">
                <Label Text="Make a phone call" Margin="10" FontSize="48" TextColor="Green" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>