<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFApp1.Views.Home"
             xmlns:custom="clr-namespace:XFApp1.CustomRenderer;assembly=XFApp1" >
    <StackLayout>
        <StackLayout>
            <custom:SwipeableImage x:Name="SwipeableImage"
                                   Margin="10"
                                   Source="__arrow_up_green.png"
                                   HeightRequest="100"
                                   WidthRequest="100"
                                   SwipedLeft="GoToCallPage" >
            </custom:SwipeableImage>
        </StackLayout>
        
    <Label x:Name="Info" Text="Home Page!" FontSize="Large"></Label>
    </StackLayout>
</ContentPage>