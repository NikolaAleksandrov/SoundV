<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFApp1.Views.TaxiPage"
             xmlns:custom="clr-namespace:XFApp1.CustomRenderer;assembly=XFApp1">
    <ContentPage.Content>
        <StackLayout>

            <custom:SwipeableImage x:Name="SwipeableImage" 
                                   Margin="10" 
                                   Source="__arrow_up_green.png"
                                   HeightRequest="150"
                                   WidthRequest="150"
                                   SwipedRight="PreviousPageMainLevel">
                <!--SwipedLeft="GoToTaxiPage"-->
            </custom:SwipeableImage>

            <Label Text="DateTime.ToShortStringFormat()" FontSize="48" TextColor="Green" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>