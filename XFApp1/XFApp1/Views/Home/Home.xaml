<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFApp1.Views.Home"
             xmlns:custom="clr-namespace:XFApp1.CustomRenderer;assembly=XFApp1" >
    <StackLayout>
        <StackLayout>
            <custom:SwipeableImage x:Name="SwipeableImage"
                                   Margin="10"
                                   Source="__arrow_up_white.png"
                                   HeightRequest="150"
                                   WidthRequest="150"
                                   SwipedLeft="GoToCallPage"
                                   SwipedDown="GoToSubLevel">
            </custom:SwipeableImage>
        </StackLayout>
        <StackLayout Margin="5,10,5,10" VerticalOptions="Center">
            <Label x:Name="Info" Text="Capital Fort!" FontSize="48" XAlign="Center"></Label>
        </StackLayout>
        <StackLayout>
            <custom:SwipeableImage x:Name="WalkerPicture"
                                   Margin="5,20,5,0"
                                   Source="__white_cane_white.png"
                                   HeightRequest="150"
                                   WidthRequest="150">
            </custom:SwipeableImage>
        </StackLayout>
    </StackLayout>
</ContentPage>